<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="applus.com.lesson2.ConfirmationActivity">

    <TextView android:text="@string/cumprimento" android:layout_width="match_parent"
        android:textSize="29sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/primary_text_dark"
        android:background="@android:color/holo_green_dark"
        android:layout_height="wrap_content"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:id="@+id/confirmation_name"
        android:textSize="24sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:id="@+id/confirmation_email"
        android:textSize="24sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Telefone"
        android:id="@+id/confirmation_telefone"
        android:textSize="24sp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:hint="CEP"
        android:id="@+id/confirmation_cep"
        android:textSize="24sp"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="Tempo"
        android:id="@+id/confirmation_tempo"
        android:textSize="24sp"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Data de Nascimento"
        android:id="@+id/confirmation_nascimento"
        android:textSize="24sp"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="RG (Somente nÃºmeros)"
        android:id="@+id/confirmation_rg"
        android:textSize="24sp"
        android:layout_marginTop="3dp" />

    <TextView android:text="@string/notificacao" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:textSize="19sp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:gravity="bottom"/>

</LinearLayout>
