<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:orientation="vertical">

    <TextView android:text="@string/cumprimento" android:layout_width="match_parent"
        android:textSize="23sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/primary_text_dark"
        android:background="@android:color/holo_green_dark"
        android:layout_height="wrap_content"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/editText_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
         />

    <EditText
        android:id="@+id/editText_senha_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Senha em Texto"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_senha_numerica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Senha Numérica"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Telefone"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:hint="CEP"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_nascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Data de Nascimento"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="RG (Somente números)"
        android:ems="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUAR"
        android:id="@+id/button"
        android:layout_gravity="right"
        android:onClick="continuarCadastro"/>

    <TextView android:text="@string/notificacao" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:layout_weight="1"
        android:gravity="bottom" />

</LinearLayout>
